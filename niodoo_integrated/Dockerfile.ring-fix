FROM rust:1.75-slim

# Install build dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    libc6-dev \
    libssl-dev \
    pkg-config \
    nasm \
    yasm \
    clang \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Copy project files
COPY . .

# Build with specific environment variables
ENV CC=gcc
ENV RUSTFLAGS="-C target-feature=-crt-static -C link-arg=-fuse-ld=bfd"

# Build the project
RUN cargo build --bin rut_gauntlet